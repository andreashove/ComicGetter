<Window x:Class="cgTrayApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar">

    
    <Grid>
        <!-- 'System.Windows.Baml2006.TypeConverterMarkupExtension'  is caused by a non recognized icon in IconSource -->
        <!-- http://stackoverflow.com/questions/12833294/provide-value-on-system-windows-baml2006-typeconvertermarkupextension-threw-a -->
        <!--IconSource="C:\\ComicGetter\\bin\\cg.ico" -->
        <tb:TaskbarIcon
            
            ToolTipText="Click to save comic">
            <tb:TaskbarIcon.TrayPopup>
                <Border
                  Background="White"
                  BorderBrush="Orange"
                  BorderThickness="2"
                  CornerRadius="4"
                  Width="80"
                  Height="40"
                >
                <Button
                    Content="Save"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="Button_Click"
                />
                </Border>
            </tb:TaskbarIcon.TrayPopup>

        </tb:TaskbarIcon>
    </Grid>
    
</Window>
    
    
